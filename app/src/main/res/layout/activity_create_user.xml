<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.bigmacdev.all_med.CreateUser"
    android:background="@color/background">

    <TextView
        android:text="Step 1 of 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/createUsername"
        android:hint="Username" />

    <TextView
        android:text="Username must be 6 characters or longer."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createPassword"
        android:hint="Password"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Password must be 8 characters or longer."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordLengthTxtCreate" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createPasswordConfirm"
        android:hint="Confirm Password"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createSubmit"
        android:layout_marginTop="10dp" />

</LinearLayout>
